<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="org.model.presenter.SimulationPresenter">

    <left>
        <VBox spacing="20" alignment="CENTER_LEFT" prefWidth="200" style="-fx-padding: 20 20 20 20;">
            <Label fx:id="simulationDayLabel" text="Dzień symulacji:"/>
            <Label fx:id="animalCountLabel" text="Liczba zwierząt:"/>
            <Label fx:id="plantCountLabel" text="Liczba roślin:"/>
            <Label fx:id="averageEnergyLabel" text="Średnia energia:"/>
            <Label fx:id="averageLifespanLabel" text="Średnia długość życia:"/>
            <Label fx:id="freeSpotsLabel" text="Liczba wolnych miejsc:"/>
            <Label fx:id="mostPopularGenotypeLabel" text="Najpopularniejszy genotyp:"/>
            <Label fx:id="averageNumberOfChildrenLabel" text="Średnia liczba dzieci:"/>

            <HBox spacing="50" alignment="CENTER">
                <Button text="Pause" onAction="#onPauseClicked"/>
                <Button text="Resume" onAction="#onResumeClicked"/>
            </HBox>

        </VBox>
    </left>

    <center>
        <GridPane fx:id="mapGrid" gridLinesVisible="true" alignment="CENTER">

        </GridPane>
    </center>

</BorderPane>